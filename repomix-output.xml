// Helper function
function getScoreForRarity(rarity) {
  const scores = {
    'Comum': 1,
    'Incomum': 3,
    'Raro': 10,
    '√âpico': 25,
    'Lend√°rio': 100,
    'Ultra-Lend√°ria': 500
  };
  return scores[rarity] || 0;
}

